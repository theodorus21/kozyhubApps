<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kozyhub.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.kozyhub.ui.news.NewsFragment"
        android:label="@string/title_event"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_navigation_news_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_booking"
        android:name="com.example.kozyhub.ui.booking.BookingFragment"
        android:label="@string/title_book"
        tools:layout="@layout/fragment_booking" >
        <action
            android:id="@+id/action_navigation_booking_to_guestHouseListFragment"
            app:destination="@id/guestHouseListFragment" />
        <action
            android:id="@+id/action_navigation_booking_to_coworkingSpaceListFragment"
            app:destination="@id/coworkingSpaceListFragment" />
        <action
            android:id="@+id/action_navigation_booking_to_restaurantListFragment"
            app:destination="@id/restaurantListFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.kozyhub.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.kozyhub.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/guestHouseListFragment"
        android:name="com.example.kozyhub.ui.guest_house_list.GuestHouseListFragment"
        android:label="@string/title_guest_house_list"
        tools:layout="@layout/fragment_guest_house_list" >
        <action
            android:id="@+id/action_guestHouseListFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/coworkingSpaceListFragment"
        android:name="com.example.kozyhub.ui.coworking_space_list.CoworkingSpaceListFragment"
        android:label="@string/coWorking"
        tools:layout="@layout/fragment_coworking_space_list" >
        <action
            android:id="@+id/action_coworkingSpaceListFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantListFragment"
        android:name="com.example.kozyhub.ui.restaurant_list.RestaurantListFragment"
        android:label="Restaurant" >
        <action
            android:id="@+id/action_restaurantListFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.kozyhub.ui.product_detail.ProductDetailFragment"
        android:label="Product Detail"
        tools:layout="@layout/fragment_product_detail" />


</navigation>